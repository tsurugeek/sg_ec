%h2 パスワードの再設定
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" }
  .form-actions
    = f.button :submit, "パスワード再設定のメールを送信する", class: 'btn btn-primary '
= render "admins_devise/shared/links"
