%h1 Listing users

%table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Email
      %th Reset password sent at
      %th Confirmed at
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.reset_password_sent_at.try(:to_s, :db)
        %td= user.confirmed_at.try(:to_s, :db)
        %td= link_to 'Show', [:admin, user]
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }
