%tfoot{id: 'total'}
  %tr
    %td.text-right{colspan: 4}= Cart.human_attribute_name(:subtotal)
    %td.text-right= number_to_currency cart.subtotal
  %tr
    %td.text-right{colspan: 4}= Cart.human_attribute_name(:shipping_cost)
    %td.text-right= number_to_currency cart.shipping_cost
  %tr
    %td.text-right{colspan: 4}= Cart.human_attribute_name(:cod_fee)
    %td.text-right= number_to_currency cart.cod_fee
