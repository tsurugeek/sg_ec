    %td.text-right{colspan: 4}= "#{Cart.human_attribute_name(:consumption_tax)}(#{cart.consumption_tax_rate}%)"
    %td.text-right= number_to_currency cart.consumption_tax
  %tr
    %td.text-right{colspan: 4}= Cart.human_attribute_name(:total)
    %td.text-right= number_to_currency cart.total
