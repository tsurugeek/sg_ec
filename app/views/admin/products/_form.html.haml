-# frozen_string_literal: true
= simple_form_for([:admin, @product]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :price
    = f.input :description
    = f.input :active
    = f.input :sort_no

  .form-actions
    = f.button :submit
